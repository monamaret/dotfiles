" set a clipboard
set clipboard+=unnamedplus

" no swap file
set noswapfile

" save undo tree in file
set undofile
set undodir=$HOME/.config/nvim/undo

" set line number
set number

" use 4 spaces instead of tab
" copy indent from current line on newline
set autoindent
set expandtab
set tabstop=4
set softtabstop=4
set shiftwidth=4
